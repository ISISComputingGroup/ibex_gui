<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="uk.ac.stfc.isis.ibex.ui.log.LogView"
            id="uk.ac.stfc.isis.ibex.ui.log.LogView"
            name="IOC Log"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="uk.ac.stfc.isis.ibex.ui.log.Perspective"
            id="uk.ac.stfc.isis.ibex.ui.log.perspective"
            name="Log">
      </perspective>
   </extension>
   <extension
         point="uk.ac.stfc.isis.ibex.ui.perspectives">
      <contribution
            class="uk.ac.stfc.isis.ibex.ui.log.Perspective">
      </contribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="uk.ac.stfc.isis.ibex.ui.log.perspective">
         <view
               closeable="false"
               id="uk.ac.stfc.isis.ibex.ui.log.LogView"
               minimized="false"
               ratio="0.1f"
               relationship="right"
               relative="uk.ac.stfc.isis.ibex.ui.perspectives.PerspectiveSwitcher"
               showTitle="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>

</plugin>
