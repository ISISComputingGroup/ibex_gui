<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="uk.ac.stfc.isis.ibex.ui.instrument.InstrumentHandler"
            id="uk.ac.stfc.isis.ibex.ui.instrument.InstrumentHandler"
            name="Select an instrument">
      </command>
      <command
            defaultHandler="uk.ac.stfc.isis.ibex.ui.instrument.baton.BatonHandler"
            id="uk.ac.stfc.isis.ibex.ui.instrument.baton.BatonHandler"
            name="Request baton">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
     <menuContribution
        allPopups="false"
        locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="instrumentMenu"
               label="Instrument">
            <command
                  commandId="uk.ac.stfc.isis.ibex.ui.instrument.InstrumentHandler"
                  id="uk.ac.stfc.isis.ibex.ui.instrument.InstrumentHandler"
                  label="Select an instrument..."
                  style="push"
                  tooltip="Select an instrument.">
            </command>
            <command
                  commandId="uk.ac.stfc.isis.ibex.ui.instrument.baton.BatonHandler"
                  id="uk.ac.stfc.isis.ibex.ui.instrument.baton.BatonHandler"
                  label="Request baton"
                  style="push"
                  tooltip="Request the baton on the instrument.">
            </command>
         </menu>
     </menuContribution>
   </extension>    
</plugin>
