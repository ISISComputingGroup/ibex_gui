<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="uk.ac.stfc.isis.ibex.ui.perspectives">
         <contribution 
            class="uk.ac.stfc.isis.ibex.ui.devicescreens.Perspective">
      </contribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
         <perspective
            class="uk.ac.stfc.isis.ibex.ui.devicescreens.Perspective"
            id="uk.ac.stfc.isis.ibex.ui.devicescreens.perspective"
            name="Device Screens">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="uk.ac.stfc.isis.ibex.ui.devicescreens.perspective">
         <view
               closeable="false"
               id="uk.ac.stfc.isis.ibex.ui.devicescreens.devicescreensview"
               minimized="false"
               moveable="false"
               ratio="0.1f"
               relationship="right"
               relative="uk.ac.stfc.isis.ibex.ui.perspectives.PerspectiveSwitcher"
               showTitle="false"
               standalone="true"
               visible="true">
         </view>
         <view
               closeable="true"
               id="uk.ac.stfc.isis.ibex.ui.devicescreens.DevicesOpiTargetView"
               minimized="false"
               moveable="false"
               ratio="0.6f"
               relationship="right"
               relative="uk.ac.stfc.isis.ibex.ui.devicescreens.devicescreensview"
               showTitle="true"
               standalone="false"
               visible="false">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="uk.ac.stfc.isis.ibex.ui.devicescreens.DeviceScreensView"
            id="uk.ac.stfc.isis.ibex.ui.devicescreens.devicescreensview"
            name="Device Screens"
            restorable="true">
      </view>
      <view
            allowMultiple="true"
            class="uk.ac.stfc.isis.ibex.ui.devicescreens.DevicesOpiTargetView"
            id="uk.ac.stfc.isis.ibex.ui.devicescreens.DevicesOpiTargetView"
            name="DevicesOpiTargetView"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="uk.ac.stfc.isis.ibex.ui.devicescreens.commands.ConfigureDeviceScreensHandler"
            id="uk.ac.stfc.isis.ibex.ui.devicescreens.command.ConfigureDeviceScreens"
            name="Configure Device Screens">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="uk.ac.stfc.isis.ibex.ui.perspectives.commands.SwitchPerspective"
            schemeId="IBEX_key_scheme"
            sequence="Alt+Shift+V">
         <parameter
               id="uk.ac.stfc.isis.ibex.ui.perspectives.commands.perspectiveID"
               value="uk.ac.stfc.isis.ibex.ui.devicescreens.perspective">
         </parameter>
      </key>
   </extension>
   <extension point="uk.ac.stfc.isis.ibex.instrument.info">
      <InstrumentInfoReceiver
            class="uk.ac.stfc.isis.ibex.ui.deviceScreens.DeviceScreensInstrumentInfoReceiver">
      </InstrumentInfoReceiver>
   </extension>  
</plugin>


