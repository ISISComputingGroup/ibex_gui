<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="uk.ac.stfc.isis.ibex.ui.synoptic.editor.commands.NewSynopticHandler"
            id="uk.ac.stfc.isis.ibex.ui.synoptic.editor.commands.NewSynoptic"
            name="New Synoptic">
      </command>
      <command
            defaultHandler="uk.ac.stfc.isis.ibex.ui.synoptic.editor.commands.EditSynopticHandler"
            id="uk.ac.stfc.isis.ibex.ui.synoptic.editor.commands.EditSynoptic"
            name="Edit Synoptic">
      </command>
      <command
            defaultHandler="uk.ac.stfc.isis.ibex.ui.synoptic.editor.commands.DeleteSynopticHandler"
            id="uk.ac.stfc.isis.ibex.ui.synoptic.editor.commands.DeleteSynoptic"
            name="Delete Synoptic">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=configurationMenu">
         <menu
               id="synopticMenu"
               label="Synoptic"
               mnemonic="S">
           <command
                 commandId="uk.ac.stfc.isis.ibex.ui.synoptic.editor.commands.NewSynoptic"
                 id="uk.ac.stfc.isis.ibex.ui.synoptic"
                 label="New"
                 mnemonic="N"
                 style="push"
                 tooltip="Create a new synoptic">
           </command>
           <command
                 commandId="uk.ac.stfc.isis.ibex.ui.synoptic.editor.commands.EditSynoptic"
                 id="uk.ac.stfc.isis.ibex.ui.synoptic"
                 label="Edit"
                 mnemonic="E"
                 style="push"
                 tooltip="Edit a synoptic">
           </command>
           <command
                 commandId="uk.ac.stfc.isis.ibex.ui.synoptic.editor.commands.DeleteSynoptic"
                 id="uk.ac.stfc.isis.ibex.ui.synoptic"
                 label="Delete"
                 mnemonic="D"
                 style="push"
                 tooltip="Delete a synoptic">
           </command>
         </menu>
         <!-- Required to force the menu items to check for enabled on startup -->
        <dynamic
              class="uk.ac.stfc.isis.ibex.ui.synoptic.editor.commands.NOP"
              id="uk.ac.stfc.isis.ibex.ui.synoptic.editor.dynamic">
        </dynamic>
      </menuContribution>
   </extension>
</plugin>
