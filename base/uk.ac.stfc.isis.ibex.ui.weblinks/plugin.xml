<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="uk.ac.stfc.isis.ibex.ui.perspectives">
      <contribution
            class="uk.ac.stfc.isis.ibex.ui.weblinks.Perspective">
      </contribution>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="uk.ac.stfc.isis.ibex.ui.weblinks.Perspective"
            id="uk.ac.stfc.isis.ibex.ui.weblinks.perspective"
            name="Web Links">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="uk.ac.stfc.isis.ibex.ui.weblinks.perspective">
         <view
               id="uk.ac.stfc.isis.ibex.ui.weblinks.WebLinksView"
               minimized="false"
               relationship="right"
               relative="uk.ac.stfc.isis.ibex.ui.perspectives.PerspectiveSwitcher"
               visible="true">
         </view>
         <view
               id="uk.ac.stfc.isis.ibex.ui.weblinks.WebLinksOpiTargetView"
               minimized="false"
               relationship="stack"
               relative="uk.ac.stfc.isis.ibex.ui.weblinks.WebLinksView"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            class="uk.ac.stfc.isis.ibex.ui.weblinks.WebLinksView"
            id="uk.ac.stfc.isis.ibex.ui.weblinks.WebLinksView"
            name="web links view"
            restorable="true">
      </view>
      <view
            allowMultiple="true"
            class="uk.ac.stfc.isis.ibex.ui.weblinks.WebLinksOpiTargetView"
            id="uk.ac.stfc.isis.ibex.ui.weblinks.WebLinksOpiTargetView"
            name="Web Links OPI view"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="uk.ac.stfc.isis.ibex.ui.perspectives.commands.SwitchPerspective"
            schemeId="IBEX_key_scheme"
            sequence="Alt+Shift+W">
         <parameter
               id="uk.ac.stfc.isis.ibex.ui.perspectives.commands.perspectiveID"
               value="uk.ac.stfc.isis.ibex.ui.weblinks.perspective">
         </parameter>
      </key>
   </extension>
</plugin>
