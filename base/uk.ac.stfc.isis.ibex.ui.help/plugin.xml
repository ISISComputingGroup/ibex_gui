<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
      		defaultHandler="uk.ac.stfc.isis.ibex.ui.help.AboutHandler"
            description="About Isis"
            id="uk.ac.stfc.isis.ibex.ui.help.About"
            name="About">
      </command>
      <command
            defaultHandler="uk.ac.stfc.isis.ibex.ui.help.ManualHandler"
            description="Open User Manual"
            id="uk.ac.stfc.isis.ibex.ui.help.manual"
            name="Manual">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?after=preferencesMenu">
            <menu
            	id="helpMenu"
                label="Help">
		         <command
		               commandId="uk.ac.stfc.isis.ibex.ui.help.About"
		               label="About"
		               style="push">
		         </command>
           <command
                 commandId="uk.ac.stfc.isis.ibex.ui.help.manual"
                 label="User Manual (Web)"
                 mnemonic="U"
                 style="push">
           </command>
         	</menu>
      </menuContribution>
   </extension>
</plugin>
